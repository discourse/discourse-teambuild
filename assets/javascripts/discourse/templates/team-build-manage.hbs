{{#if targets}}
  {{#each targets as |target|}}
    {{teambuild-target target=target removeTarget=(action "removeTarget" target)}}
  {{/each}}
{{else}}
  {{i18n "discourse_teambuild.manage.get_started"}}
{{/if}}

<div class='controls'>
  {{d-button
    class="btn-primary"
    label="discourse_teambuild.targets.create"
    icon="plus"
    action=(action "newTarget")}}
</div>
